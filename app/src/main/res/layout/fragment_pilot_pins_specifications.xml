<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_15"
    android:paddingRight="@dimen/space_15"
    tools:context=".screens.pilot_pins.specifications.PilotPinsSpecificationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/white_two"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:contentPadding="@dimen/space_15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/diameter_pin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/diameter_of_pilot_pin"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <net.broachcutter.vendorapp.views.FlatRadioButtonGroup
                android:id="@+id/diameter_pin_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cutter_item_height"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diameter_pin_label">

                <net.broachcutter.vendorapp.views.FlatRadioButton
                    android:id="@+id/dia798"
                    style="@style/FlatRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/doc_7_98_mm" />

                <net.broachcutter.vendorapp.views.FlatRadioButton
                    android:id="@+id/dia635"
                    style="@style/FlatRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/doc_6_35_mm" />

                <net.broachcutter.vendorapp.views.FlatRadioButton
                    android:id="@+id/dia474"
                    style="@style/FlatRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/doc_4_74_mm" />

            </net.broachcutter.vendorapp.views.FlatRadioButtonGroup>

            <TextView
                android:id="@+id/length_pin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/length_of_pilot_pin"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diameter_pin_group" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lengthOfPinEditContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.5dp"
                android:background="@drawable/white_rounded_rectangle5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/length_pin_label">

                <EditText
                    android:id="@+id/length_pin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cutter_item_height"
                    android:inputType="number"
                    tools:text="22"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="@dimen/_12ssp"
                    android:paddingStart="@dimen/_10sdp"
                    android:background="@color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15"
                    android:background="@color/transparent"
                    android:text="@string/mm"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pilotPinSearch"
        style="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_37sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:text="@string/search_for_pilot_pin"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilot_pin_note"
        android:layout_marginBottom="@dimen/space_20"
        android:gravity="center"
        android:fontFamily="@font/nunito_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        />


</LinearLayout>
