<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_summary_height"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:background="@drawable/white_rounded_rectangle5"
    tools:context=".screens.home.PendingOrderCardFragment">

    <TextView
        android:id="@+id/orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/proxima_nova_semibold"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Order Number 10022010102" />

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_alt_regular"
        android:textSize="12sp"
        android:textColor="@color/black"
        tools:text="Order placed on 24/01/2021"
        app:layout_constraintStart_toStartOf="@id/orderNumber"
        app:layout_constraintTop_toBottomOf="@id/orderNumber"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/orderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/proxima_nova_alt_regular"
        android:textColor="@color/warm_grey_two"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderDate"
        tools:text="3 cutters, 2 machines and 5 spares " />

    <TextView
        android:id="@+id/orderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/space_15"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:textColor="@color/black_two"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rs. 52,015" />

    <LinearLayout
        android:id="@+id/footerBackground"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/confirm_order_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/marine"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAllCaps="true"
        app:fontFamily="@font/proxima_nova_semibold"
        app:layout_constraintBottom_toBottomOf="@id/footerBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/footerBackground"
        tools:text="Currently under processing" />
</androidx.constraintlayout.widget.ConstraintLayout>
