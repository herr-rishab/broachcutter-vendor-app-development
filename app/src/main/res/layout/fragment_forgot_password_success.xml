<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/diagonal_red_blue_gradient"
    tools:context=".screens.login.forgot_password.ForgotPasswordSuccessFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cutter_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.28"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cutter_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/cutter_vertical_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cutter_bottom_guideline"
        android:src="@drawable/cutter_shape"
        />

    <TextView
        android:id="@+id/resetSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="@string/check_your_e_mail_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/proxima_nova_semibold"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resetHelpText"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/resetHelpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_mail_sent"
        android:textAlignment="center"
        android:textSize="12sp"
        android:fontFamily="@font/proxima_nova_alt_regular"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/resetSuccessTitle"
        app:layout_constraintBottom_toTopOf="@id/backToLoginButton"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToLoginButton"
        android:text="@string/login"
        android:layout_marginTop="56dp"
        style="@style/WhiteButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetHelpText"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
