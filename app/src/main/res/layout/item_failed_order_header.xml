<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutFailedOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_semibold"
        android:textColor="@color/twilight_blue"
        android:textSize="@dimen/_17ssp"
        android:layout_marginStart="@dimen/_4sdp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="FAILED ORDERS (2)" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/proxima_nova_alt_regular"
        android:textColor="@color/burnt_red"
        android:textSize="@dimen/_9sdp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/ivExpandableIcon"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="These items could not be ordered and are in your cart again, please try again in some time." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExpandableIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_up_arrow_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>