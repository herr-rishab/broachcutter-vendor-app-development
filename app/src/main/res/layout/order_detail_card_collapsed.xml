<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/collapsedConstraintParent"
    tools:background="@color/white_two"
    android:animateLayoutChanges="true"
    tools:context=".screens.home.PendingOrderCardFragment">

    <TextView
        android:id="@+id/orderItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/black"
        tools:text="CUB Machine (Quantity: 5)"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintRight_toLeftOf="@id/orderItemAmount"
        android:layout_marginRight="@dimen/space_5"
        android:fontFamily="@font/proxima_nova_semibold" />

    <TextView
        android:id="@+id/orderItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/proxima_nova_alt_regular"
        android:textColor="@color/warm_grey_two"
        android:textSize="12sp"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/orderItemTitle"
        app:layout_constraintTop_toBottomOf="@id/orderItemTitle"
        tools:text="3 dispatched, 2 pending" />

    <TextView
        android:id="@+id/orderItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/space_15"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:textColor="@color/black_two"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rs. 52,015" />

    <TextView
        android:id="@+id/tv_tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/proxima_nova_semibold"
        android:textColor="@color/burnt_red"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/orderItemSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/orderItemSubtitle"
        tools:text="Tracking number (FedEx: V123456789012345) " />

    <ImageView
        android:id="@+id/img_copy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_copy"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tracking"
        app:layout_constraintEnd_toEndOf="@+id/orderItemAmount"
        app:layout_constraintTop_toTopOf="@+id/tv_tracking" />

</androidx.constraintlayout.widget.ConstraintLayout>
