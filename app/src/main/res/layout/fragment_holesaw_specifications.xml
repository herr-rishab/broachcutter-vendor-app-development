<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_15"
    android:paddingRight="@dimen/space_15"
    tools:context=".screens.holesaws.specifications.HolesawsSpecificationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/white_two"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:contentPadding="@dimen/space_15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/holesaw_desc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/holesaws_1"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/brownish_grey_four"
                app:fontFamily="@font/proxima_nova_alt_regular"
                android:textSize="@dimen/_10ssp"
                />

            <TextView
                android:id="@+id/holesaw_desc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/holesaws_2"
                app:layout_constraintTop_toBottomOf="@id/holesaw_desc1"
                android:textColor="@color/brownish_grey_four"
                app:fontFamily="@font/proxima_nova_alt_regular"
                android:textSize="@dimen/_10ssp"
                />

            <TextView
                android:id="@+id/holesaw_diameter_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/holesaw_diameter"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/holesaw_desc2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lengthOfPinEditContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.5dp"
                android:background="@drawable/white_rounded_rectangle5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/holesaw_diameter_label">

                <EditText
                    android:id="@+id/holesaw_diameter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cutter_item_height"
                    android:inputType="number"
                    tools:text="22"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="@dimen/_12ssp"
                    android:paddingStart="@dimen/_10sdp"
                    android:background="@color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:imeOptions="actionSearch"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_15"
                    android:background="@color/transparent"
                    android:text="@string/mm"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/holesawSearch"
        style="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_37sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:text="@string/search_for_holesaws"
        />

</LinearLayout>
