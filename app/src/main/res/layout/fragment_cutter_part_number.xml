<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_15"
    android:paddingRight="@dimen/space_15"
    android:clipToPadding="false"
    tools:context=".screens.cutters.part_number.CutterPartNumberFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:contentPadding="@dimen/space_15"
        app:cardBackgroundColor="@color/white_two"
        app:cardCornerRadius="5dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cutterPilotPinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cutter_pilot_pin_number"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:labelFor="@id/numberEntry"
                android:fontFamily="@font/nunito_regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/numberEntry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:hint="@string/enter_number_here"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutterPilotPinLabel"
                android:layout_marginTop="@dimen/space_5"
                tools:text="2000199902"
                android:fontFamily="@font/proxima_nova_alt_regular"
                android:background="@drawable/white_rounded_rectangle5"
                android:padding="12dp"
                android:imeOptions="actionSearch"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/search"
        style="@style/MaterialButton"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:fontFamily="@font/proxima_nova_alt_regular"
        app:backgroundTint="@drawable/search_button_selector"
        app:cornerRadius="5dp"
        />

    <com.valartech.loadinglayout.LoadingLayout
        android:id="@+id/cutterLoadingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/product_card_height"
        android:layout_marginTop="@dimen/space_20"
        android:visibility="gone"
        >
        <!--loading-->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
        <!--complete-->
        <net.broachcutter.vendorapp.views.ProductCardView
            android:id="@+id/cutterCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_card_height"
            app:cardBackgroundColor="@color/marine"
            />
        <!--empty-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/noResultsImage"
                android:layout_width="154dp"
                android:layout_height="154dp"
                android:src="@drawable/no_results"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/noResultsTitle"
                app:layout_constraintVertical_chainStyle="packed"
                />

            <TextView
                android:id="@+id/noResultsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="@string/no_results_title"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/noResultsImage"
                app:layout_constraintBottom_toTopOf="@id/noResultsDescription"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                />

            <TextView
                android:id="@+id/noResultsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/greyish_two"
                android:textSize="12sp"
                android:text="@string/no_results_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/noResultsTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.valartech.loadinglayout.LoadingLayout>

</LinearLayout>
