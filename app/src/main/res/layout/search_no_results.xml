<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:tag="@string/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/noResultsImage"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:src="@drawable/no_results"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/noResultsTitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/noResultsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="@string/no_results_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noResultsImage"
        app:layout_constraintBottom_toTopOf="@id/noResultsDescription"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20" />

    <TextView
        android:id="@+id/noResultsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/greyish_two"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/no_results_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noResultsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20" />

    <Button
        android:id="@+id/btn_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RedButton"
        android:text="@string/back_to_search"
        android:layout_marginStart="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="@+id/noResultsDescription"
        app:layout_constraintStart_toStartOf="@+id/noResultsDescription"
        app:layout_constraintTop_toBottomOf="@+id/noResultsDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
