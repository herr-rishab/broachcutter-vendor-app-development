<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/space_15"
    android:paddingRight="@dimen/space_15"
    android:paddingTop="@dimen/space_30"
    android:paddingBottom="@dimen/space_15">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/black"
        android:text="@string/submit_order"
        android:fontFamily="@font/proxima_nova_alt_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:text="@string/submit_order_detail"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/space_25"
        android:fontFamily="@font/proxima_nova_alt_regular"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@color/burnt_red"
        app:strokeWidth="1.5dp"
        app:backgroundTint="@color/white"
        android:text="@string/no_go_back_caps"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/burnt_red"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/yesButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@id/dialogMessage"
        android:layout_marginTop="@dimen/space_30"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginRight="@dimen/space_10"
        app:cornerRadius="5dp"
        app:rippleColor="@color/burnt_red"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/burnt_red"
        android:text="@string/yes_im_sure_caps"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/noButton"
        app:layout_constraintTop_toBottomOf="@id/dialogMessage"
        android:layout_marginTop="@dimen/space_30"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:cornerRadius="5dp"
        app:rippleColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
