<?xml version="1.0" encoding="utf-8"?>
<com.valartech.loadinglayout.LoadingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sparesLoadingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.spares.SparesFragment">

    <!-- Loading -->

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <!-- Complete -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15">

        <TextView
            android:id="@+id/sparesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="@string/spares"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sparesSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/spares_desc"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/sparesTitle"
            app:layout_constraintTop_toBottomOf="@id/sparesTitle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/sparesSearchCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_15"
            app:cardBackgroundColor="@color/white_two"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/space_15"
            app:layout_constraintTop_toBottomOf="@id/sparesSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/machine"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/machineSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_39sdp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="@dimen/space_20"
                    android:background="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_by"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <net.broachcutter.vendorapp.views.FlatRadioButtonGroup
                    android:id="@+id/searchType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="4dp">

                    <net.broachcutter.vendorapp.views.FlatRadioButton
                        android:id="@+id/partNumberButton"
                        style="@style/FlatRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/part_number" />

                    <net.broachcutter.vendorapp.views.FlatRadioButton
                        android:id="@+id/descriptionButton"
                        style="@style/FlatRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/description" />
                </net.broachcutter.vendorapp.views.FlatRadioButtonGroup>

                <TextView
                    android:id="@+id/searchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="12sp"
                    android:text="@string/part_number" />

                <EditText
                    android:id="@+id/searchText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/white_rounded_rectangle5"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingLeft="@dimen/space_10"
                    android:textColorHint="@color/black_20"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search"
            style="@style/RedButton"
            android:layout_width="@dimen/_128sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginTop="@dimen/space_20"
            android:imeOptions="actionSearch"
            android:text="@string/search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sparesSearchCard" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.valartech.loadinglayout.LoadingLayout>
