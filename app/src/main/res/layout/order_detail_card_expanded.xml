<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expandedConstraintParent"
    tools:background="@color/white_two"
    tools:context=".screens.home.PendingOrderCardFragment">

    <TextView
        android:id="@+id/orderItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        tools:text="CUB Machine (Quantity: 5)"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/proxima_nova_semibold" />

    <TextView
        android:id="@+id/orderItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/warm_grey_two"
        tools:text="3 dispatched, 2 pending"
        android:fontFamily="@font/proxima_nova_alt_regular"
        app:layout_constraintLeft_toLeftOf="@id/orderItemTitle"
        app:layout_constraintTop_toBottomOf="@id/orderItemTitle"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/orderItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/space_15"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:textColor="@color/black_two"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rs. 52,015" />

    <LinearLayout
        android:id="@+id/dispatchDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/orderItemTitle"
        app:layout_constraintBottom_toTopOf="@id/footerBackground"
        >

    </LinearLayout>

    <View
        android:id="@+id/footerBackground"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/burnt_red" />

    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:fontFamily="@font/proxima_nova_semibold"
        app:layout_constraintBottom_toBottomOf="@id/footerBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/footerBackground"
        android:text="@string/show_less_details" />
</androidx.constraintlayout.widget.ConstraintLayout>
