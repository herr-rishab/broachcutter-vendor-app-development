<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/space_30"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/space_15">

    <TextView
        android:id="@+id/update_payment_term_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:text="@string/update_payment_term"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/update_payment_term_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_25"
        android:paddingEnd="@dimen/_10sdp"
        android:fontFamily="@font/proxima_nova_alt_regular"
        android:text="@string/update_payment_term_detail"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_payment_term_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_payment_term_noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginRight="@dimen/space_10"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/no_select_each"
        android:textColor="@color/burnt_red"
        android:textSize="@dimen/_10ssp"
        app:backgroundTint="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/update_payment_term_yesButton"
        app:layout_constraintTop_toBottomOf="@id/update_payment_term_message"
        app:rippleColor="@color/burnt_red"
        app:strokeColor="@color/burnt_red"
        app:strokeWidth="1.5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_payment_term_yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_30"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/update_term_to_all"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:backgroundTint="@color/burnt_red"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/update_payment_term_noButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_payment_term_message"
        app:rippleColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>
