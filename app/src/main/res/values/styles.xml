<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BroachcutterTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/nice_blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorAccent">@color/tomato</item>
        <item name="colorPrimary">@color/light_navy</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/gunmetal</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="BroachcutterTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="LoginTheme" parent="BroachcutterTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ToolbarTitleTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoadingDialog" parent="SpotsDialogDefault">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <!--<item name="DialogTitleText">Updatingâ€¦</item>-->
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?android:attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/twilight_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="NewPasswordAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:fontFamily">@font/proxima_nova_thin</item>
    </style>

    <style name="EditText.BlackUnderline" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="FlatRadioButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_bold</item>
        <item name="android:paddingLeft">@dimen/space_10</item>
        <item name="android:paddingRight">@dimen/space_10</item>
    </style>

    <style name="MaterialButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="letterSpacing">0</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="WhiteButton" parent="MaterialButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">7.5dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/proxima_nova_alt_regular</item>
        <item name="android:textColor">@color/marine</item>
    </style>

    <style name="RedButton" parent="MaterialButton">
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="backgroundTint">@drawable/search_button_selector</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavDrawerTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="LoginInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/login_input_box_selector</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="LoginInputTextbox" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/s_16</item>
        <item name="fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="PhonePrefixTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/s_16</item>
        <item name="fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="CartButtonTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/proxima_nova_alt_bold</item>
    </style>


    <style name="CartButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/CartButtonTextAppearance</item>
    </style>

    <style name="ExposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="SmallTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
    </style>

    <style name="AppSettings" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:background">@color/white_five</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NavigationViewSeparator">
        <item name="android:listDivider">@drawable/nav_menu_16dp</item>
        <item name="android:textColorSecondary">@color/warm_grey_nine</item>
    </style>

    <style name="DialogFragment" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_4sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TabText" parent="android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
    </style>
</resources>
